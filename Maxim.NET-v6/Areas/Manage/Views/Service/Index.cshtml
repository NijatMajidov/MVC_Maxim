@using Maxim.Core.Models;
@model List<Service>
@{
    int count = 0;
}
<h1>
    Services

    <a class="btn btn-primary" asp-action="Create"> Create</a>
</h1>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">ImageUrl</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="~/Upload/Services/@item.ServicesImg" width="100" height="100" alt="image"/>
                    </td>

                    <td>
                        <a class="btn btn-primary" asp-action="Update" asp-controller="Service" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Service" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
